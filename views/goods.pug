include head.pug

.top-id.center
  // Head-top-menu
  header
    .header
      a(href='index')
        p.header__logo-text ЗооStore.
      // <a href="index"><img class="phone__logo" src="img/logo.png" alt=""></a>
      input.header__input(type='text' placeholder='Пошук')
      nav
        a.header__link(href='catalog') Каталог
        a.header__link(href='order') Кошик
    .phone
      .phone__menu
        a(href='index')
          p.header__logo-text ЗооStore.
        .phone__box
          a(href='#')
            img.phone__img(src='../img/f.png' alt='')
          a(href='catalog')
            img.phone__img(src='../img/fff.png' alt='')
          a(href='basket')
            img.phone__img(src='../img/ff.png' alt='')
  // Head-top-menu
  // Head-under-text
  section
    .Under-text
      h1.Under-text__H1 Тільки найкраще для вашого улюбленця
      p.Under-text__p Життів то дев'ять, але здоров'я одне!
      a.Under-text__a.Under-text__catalog(href='catalog') Перейти до каталогу
// Head-under-text

.center.block
  div
    ul.block-pack__ul
      a.block-pack__li(href='index') Головна
      a.block-pack__li(href='catalog') Каталог товарів
      a.block-pack__li(href="#") Сторінка товару 
  .block__images 
    a(href='basket')
      img(src="../img/cart.png", alt="")
.center.block-swap
  .block__images
    a(href='catalog')
      img(src="../img/category.png", alt="")
  .block__images 
    a(href='basket')
      img(src="../img/cart.png", alt="")
.price__cost-main      

.center
  .goods-box
    .goods-box__img
      img(
        src="img/"+goods[0]['image']
        class="goods-big-image"
        )
    .goods-box__info
      h2 #{goods[0]['name']}
      p #{goods[0]['description']}
      .price__button
        .price__cost 
          .price__cost-main
            span(class="success") Ціна: #{goods[0]['cost']} ₴
      .goods-box__button
        button(
          class="button-success add-to-cart"
        data-goods_id=goods[0]['id']
      ) До кошику

